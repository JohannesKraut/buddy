  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
      	Monthly planning
        <small>Income vs. expenses</small>
      </h1>
      <!-- <ol class="breadcrumb"> -->
		<%=	content_tag(:ol, :class => "breadcrumb") do
				navigation = {
				"Home" => [root_path, "fa fa-dashboard"],
				"Monthly planning" => [items_path, "active"]}
				navigation.each do |key, value|
						concat content_tag(:li, link_to(key, value[0], :class => value[1]))
				end
		end %>
