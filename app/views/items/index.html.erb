<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1> Monthly planning <small>Income vs. expenses</small></h1>
		<!-- <ol class="breadcrumb"> -->
		<%= render 'navigations/navigation_bar' %>
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Data Table With Full Features</h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<table style="width: 67%; margin: 0 auto 2em auto;" cellspacing="0" cellpadding="3" border="0">
							<thead>
								<tr>
									<th>Filter</th>
								</tr>
							</thead>
							<tbody>
					            <tr id="filter_col8" data-column="7">
					                <td>Column - Name</td>
					                <td align="center"><%= select_tag "col7_filter", options_from_collection_for_select(Category.all, "id", "name"), include_blank: "All", class:"column_filter" %> </td>
					            </tr>
					            <tr id="filter_col7" data-column="6">
					                <td>Column - Salary</td>
					                <td align="center"><%= select_tag "col6_filter", options_for_select([['Active', "1"],['Inactive', "0"]]), include_blank: "All", class:"column_filter" %> </td>
					            </tr> 
							</tbody>
						</table>
						<table id="example1" class="display" data-source="<%= items_url(format: "json") %>">
							<thead>
								<tr>
									<th>Order</th>
									<th>Name</th>
									<th>Total amount</th>
									<th>Amount calculated</th>
									<th>Reserve</th>
									<th>Maturity</th>
									<th>Active</th>
									<th>Category</th>
									<th>Interval</th>
									<th>Rollup</th>
									<th>Account</th>
									<th>External account</th>
									<th>Key words</th>
									<th colspan="3"></th>
								</tr>
							</thead>
							<tbody>
								<!-- automatically filled by items controller -->
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
		<div>
	    <div class="form-group">
          <label for="itemsInputFile">Import as CSV</label>
          	<%= form_tag import_items_path, multipart: true do %>
			<%= file_field_tag :file %>
			<button type="submit" class="btn btn-primary">Submit</button>
			<% end %>
			<%= link_to 'New Item', new_item_path %>
        </div>

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
	var tableId = '#example1'
	myFunction(tableId)
</script>
