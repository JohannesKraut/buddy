  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
      	Monthly planning
        <small>Income vs. expenses</small>
      </h1>
      <!-- <ol class="breadcrumb"> -->
		<%=	content_tag(:ol, :class => "breadcrumb") do
				navigation = {
				"Home" => [root_path, "fa fa-dashboard"],
				"Monthly planning" => [root_path, "active"]}
				navigation.each do |key, value|
						concat content_tag(:li, link_to(key, value[0], :class => value[1]))
				end
		end %>
	    <!-- <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li> 
	    <li><a href="#">Tables</a></li>
	    <li class="active">Data tables</li> 
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li> -->
      <!-- </ol> -->
    </section>
	
	<!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data Table With Full Features</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
				<table>
				  <thead>
					<tr>
					  <th>Order</th>
					  <th>Name</th>
					  <th>Total amount</th>
					  <th>Amount calculated</th>
					  <th>Reserve</th>
					  <th>Maturity</th>
					  <th>Active</th>
					  <th>Category</th>
					  <th>Interval</th>
					  <th colspan="3"></th>
					</tr>
				  </thead>

				  <tbody>
					<% @items.each do |item| %>
					  <tr>
						<td><%= item.order_id %></td>
						<td><%= item.name %></td>
						<td><%= item.total_amount %></td>
						<td><%= item.amount_calculated %></td>
						<td><%= item.reserve %></td>
						<td><%= item.maturity %></td>
						<td><%= item.active %></td>
						<td><%= item.category %></td>
						<td><%= item.interval %></td>
						<td><%= link_to 'Show', item %></td>
						<td><%= link_to 'Edit', edit_item_path(item) %></td>
						<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					  </tr>
					<% end %>
				  </tbody>
				</table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
