    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data Table With Full Features</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
		        <table style="width: 67%; margin: 0 auto 2em auto;" cellspacing="0" cellpadding="3" border="0">
			        <thead>
			            <tr>
			                <th>Filter</th>
			            </tr>
			        </thead>
			        <tbody>
			            
	        		</tbody>
    			</table>
			    <table id="example1" class="display" data-source="<%= items_url(format: "json") %>">
				  <thead>
					<tr>
					  <th>Order</th>
					  <th>Name</th>
