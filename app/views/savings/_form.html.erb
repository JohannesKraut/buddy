<%= form_with(model: @saving, local: true) do |form| %>
  <% if @saving.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@saving.errors.count, "error") %> prohibited this saving from being saved:</h2>

      <ul>
      <% @saving.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- general form elements -->
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Edit data</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
      <div class="box-body">
	  <div class="form-group">
	  	<div class="field">
		    <%= form.label :name %>
		    <%= form.text_field :name, id: :saving_name, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
	  <div class="form-group">
	  	<div class="field">
		    <%= form.label :description %>
		    <%= form.text_field :description, id: :saving_description, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
	  <div class="form-group">
	  	<div class="field">
		    <%= form.label :duration %>
		    <%= form.text_field :duration, id: :saving_duration, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>		  
    </div>
  	<!-- /.box-body -->
    <div class="box-footer">
    	<button type="submit" class="btn btn-primary">Submit</button>
  	</div>
	</form>
  </div>
  <!-- /.box -->
  
<% end %>
