<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1> Monthly planning <small>Income vs. expenses</small></h1>
	  	<%= render 'navigations/navigation_bar' %>
	  	<%= render 'layouts/state_info' %>
	</section>

	<!-- Main content -->
	<section class="content">
		<%= render 'finance_states/diagram' %>
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Data Table With Full Features</h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<table style="width: 67%; margin: 0 auto 2em auto;" cellspacing="0" cellpadding="3" border="0">
							<thead>
								<tr>
									<th>Filter</th>
								</tr>
							</thead>
							<tbody>

							</tbody>
						</table>
						<table id="example1" class="display" data-source="<%= finance_states_url(format: "json") %>">
						  <thead>
						    <tr>
						      <th>Period</th>
						      <th>Hibiscus sync</th>
						      <th>Balance</th>
						      <th>Account</th>
						      <th>Edit</th>
						      <th>Delete</th>
						    </tr>
						  </thead>
							<tbody>
								<!-- automatically filled by items controller -->
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
		<div>
			<h4>Create statistics</h4>
			<%= form_tag synchronize_finance_states_path, multipart: true do %>
			<%= submit_tag "Create statistics" %>
			<% end %>
		</div>
		<div>
			<h4>Import Statistics</h4>
			<%= form_tag import_finance_states_path, multipart: true do %>
			<%= file_field_tag :file %>
			<%= submit_tag "Import CSV" %>
			<% end %>
			<%= link_to 'New Account', new_finance_state_path %>
		</div>
		<div class="form-group">
          <label for="financeStatesDeleteAll">Delete all</label>
          	<%= form_tag delete_all_finance_states_path, multipart: true do %>
			<button type="submit" class="btn btn-primary">Delete all</button>
			<% end %>
        </div>
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
	var tableId = '#example1'
	myFunction(tableId)
</script>



