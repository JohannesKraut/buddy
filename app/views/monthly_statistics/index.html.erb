<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1> Monthly planning <small>Income vs. expenses</small></h1>
	  	<%= render 'navigations/navigation_bar' %>
	  	<p id="notice"><%= notice %></p>
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Data Table With Full Features</h3>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<table style="width: 67%; margin: 0 auto 2em auto;" cellspacing="0" cellpadding="3" border="0">
							<thead>
								<tr>
									<th>Filter</th>
								</tr>
							</thead>
							<tbody>
					            <tr id="filter_col8" data-column="7">
					                <td>Column - Salary</td>
					                <td align="center"><%= select_tag "col7_filter", options_for_select([['external_account', "external_account"],['key_word', "key_word"],['item_name', "item_name"],['default', "default"]]), include_blank: "All", class:"column_filter" %> </td>
					            </tr>
					            <tr id="filter_col3" data-column="2">
					                <td>Column - Salary</td>
					                <td align="center"><%= select_tag "col2_filter", options_from_collection_for_select(Account.all, "id", "description"), include_blank: "All",  class:"column_filter" %> </td>
					            </tr>
					            <tr id="filter_col4" data-column="3">
					                <td>Column - Salary</td>
					                <td align="center"><%= select_tag "col3_filter", options_for_select([['unmatched', nil]]), include_blank: "All",  class:"column_filter" %> </td>
					            </tr> 
							</tbody>
						</table>
						<table id="example1" class="display" data-source="<%= monthly_statistics_url(format: "json") %>">
							<thead>
								<tr>
									<th>#</th>
									<th>Period</th>
									<th>Account</th>
									<th>Item</th>
									<th>Planned value</th>
									<th>Actual value</th>
									<th>Hibiscus id</th>
									<th>Match confidence</th>
									<th>Match type</th>
									<th>Match value</th>
									<th>Text</th>									
								</tr>
							</thead>
							<tbody>
								<!-- automatically filled by items controller -->
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
		<div>
			<h4>Import Statistics</h4>
			<%= form_tag import_monthly_statistics_path, multipart: true do %>
			<%= file_field_tag :file %>
			<%= submit_tag "Import CSV" %>
			<% end %>
			<%= link_to 'New Monthly Statistic', new_monthly_statistic_path %>
		</div>
		<div class="form-group">
          <label for="monthlyStatisticsDeleteAll">Delete all</label>
          	<%= form_tag delete_all_monthly_statistics_path, multipart: true do %>
			<button type="submit" class="btn btn-primary">Delete all</button>
			<% end %>
        </div>
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
	var tableId = '#example1'
	myFunction(tableId)
</script>

