<p id="notice"><%= notice %></p>

<h1>Monthly Statistics</h1>

<table>
  <thead>
    <tr>
      <th>Period</th>
      <th>Planned value</th>
      <th>Actual value</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monthly_statistics.each do |monthly_statistic| %>
      <tr>
        <td><%= monthly_statistic.period %></td>
        <td><%= monthly_statistic.planned_value %></td>
        <td><%= monthly_statistic.actual_value %></td>
        <td><%= monthly_statistic.item %></td>
        <td><%= link_to 'Show', monthly_statistic %></td>
        <td><%= link_to 'Edit', edit_monthly_statistic_path(monthly_statistic) %></td>
        <td><%= link_to 'Destroy', monthly_statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

