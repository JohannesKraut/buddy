<%= form_with(model: @monthly_statistic, local: true) do |form| %>
  <% if @monthly_statistic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monthly_statistic.errors.count, "error") %> prohibited this monthly_statistic from being saved:</h2>

      <ul>
      <% @monthly_statistic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 
  <!-- general form elements -->
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Edit data</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
      <div class="box-body">
	  <div class="form-group">
	  	<div class="field">
		    <%= form.label :period %>
		    <%= form.text_field :period, id: :monthly_statistic_period, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
		  
	  <div class="form-group">
		<div class="field">
	   		<%= form.label :planned_value %>
	  		<%= form.text_field :planned_value, id: :monthly_statistic_planned_value, class: "form-control", placeholder: "Test"  %>
		</div>
	  </div>
	
	  <div class="form-group">
	  	<div class="field">
	    	<%= form.label :actual_value %>
	    	<%= form.text_field :actual_value, id: :monthly_statistic_actual_value, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
	  
	  <div class="form-group">
		<div class="field">
	    	<%= form.label :account_id %>
	    	<%= form.text_field :account_id, id: :monthly_statistic_account_id, class: "form-control", placeholder: "Test" %>
	    </div>
	  </div>
	
	  <div class="form-group">
		<div class="field">
	    	<%= form.label :item_id %>
	    	<%= form.text_field :item_id, id: :monthly_statistic_item_id, class: "form-control", placeholder: "Test" %>
	  	</div>
	  </div>
	  
	  <div class="form-group">
		<div class="field">
	    	<%= form.label :match_confidence %>
	    	<%= form.text_field :match_confidence, id: :monthly_statistic_match_confidence, class: "form-control", placeholder: "Test" %>
	  	</div>
	  </div>
	  
	  <div class="form-group">
		<div class="field">
	    	<%= form.label :match_type%>
	    	<%= form.text_field :match_type, id: :monthly_statistic_match_type, class: "form-control", placeholder: "Test" %>
	  	</div>
	  </div>
	  
	  <div class="form-group">
		<div class="field">
		    <%= form.label :match_value %>
		    <%= form.text_field :match_value, id: :monthly_statistic_match_value, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
	  <div class="form-group">
	  	<div class="field">
		    <%= form.label :text %>
		    <%= form.text_field :text, id: :monthly_statistic_text, class: "form-control", placeholder: "Test" %>
		</div>
	  </div>
		  
	  <div class="form-group">
		<div class="field">
		    <%= form.label "Valuta" %>
		    <% @transaction = HibiscusTransaction.find(@monthly_statistic.hibiscus_sync_id) %>
		    <%= form.text_field @transaction.valuta, :value => @transaction.valuta, id: :monthly_statistic_hibiscus_transaction_valuta, class: "form-control", placeholder: "Test", readonly: true %>
		</div>
	  </div>
	  <div class="form-group">
	    <%= content_tag(:div, :class => "checkbox") do %>
			<%= content_tag(:label) do %>
		    	<%= form.check_box(:internal_transaction, id: :monthly_statistic_internal_transaction, class: "checkbox") + :internal_transaction %>
		    <% end %>
		<% end %>
	  </div>
	  <div class="form-group">
	    <%= content_tag(:div, :class => "checkbox") do %>
			<%= content_tag(:label) do %>
		    	<%= form.check_box(:reserve_payment, id: :monthly_statistic_reserve_payment, class: "checkbox") + :reserve_payment %>
		    <% end %>
		<% end %>
	  </div>
	  <div class="form-group">
	    <%= content_tag(:div, :class => "checkbox") do %>
			<%= content_tag(:label) do %>
		    	<%= form.check_box(:reserve_release, id: :monthly_statistic_reserve_release, class: "checkbox") + :reserve_release %>
		    <% end %>
		<% end %>
	  </div>		
    </div>
  	<!-- /.box-body -->
    <div class="box-footer">
    	<button type="submit" class="btn btn-primary">Submit</button>
  	</div>
	</form>
  </div>
  <!-- /.box -->
  
<% end %>
