<%= form_with(model: @account, local: true) do |form| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- general form elements -->
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Edit data</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
      <div class="box-body">
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :account_number %>
	    	<%= form.text_field :account_number, id: :account_account_number, class: "form-control", placeholder: "Test" %>
		 </div>
	  </div>
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :description %>
	    	<%= form.text_field :description, id: :account_description, class: "form-control", placeholder: "Test" %>
		 </div>
	  </div>	  
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :iban %>
	    	<%= form.text_field :iban, id: :account_iban, class: "form-control", placeholder: "Test" %>
		 </div>
	  </div>	  
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :bic %>
	    	<%= form.text_field :bic, id: :account_bic, class: "form-control", placeholder: "Test" %>
		 </div>
	  </div>
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :hibiscus_account_id %>
	    	<%= form.text_field :hibiscus_account_id, id: :account_account_id, class: "form-control", placeholder: "Test" %>
		 </div>
	  </div>
	  <div class="form-group">
		 <div class="field">
	    	<%= form.label :item_id %>
	  	<%= form.collection_select :item_id, Item.all ,:id, :name, {}, {class: "form-control select2", :id => "item_id" }%>
		 </div>
	  </div>		
    </div>
  	<!-- /.box-body -->
    <div class="box-footer">
    	<button type="submit" class="btn btn-primary">Submit</button>
  	</div>
	</form>
  </div>
  <!-- /.box -->
<% end %>



