<!-- <body class="skin-blue sidebar-mini"> "hold-transition skin-blue sidebar-mini" -->
<div class="wrapper">
	<header class="main-header">
		<%= render template: "layouts/header" %>
	</header>
  	<%= render template: "layouts/sidebar" %>
  	<%= yield %>
	  <!-- Main Footer -->
	  <footer class="main-footer">
	    <!-- To the right -->
	    <div class="pull-right hidden-xs">
	      Anything you want
	    </div>
	    <!-- Default to the left -->
	    <strong>Copyright &copy; 2016 <a href="#">Company</a>.</strong> All rights reserved.
	  </footer>
  	<%= render template: "layouts/controls" %>
</div>
</body>
</html>
